<ul>
  <li>Name: <%= @attraction.name %> </li>
  <li>Total Number of Users: <%= @count %> </li>
  <li>Ticket Requirement: <%= @attraction.tickets %> </li>
  <li>Height Requirement: <%= @attraction.min_height %> inches</li>
  <li>Nausea Rating: <%= @attraction.nausea_rating %> </li>
  <li>Happiness Rating: <%= @attraction.happiness_rating %> </li>

  <%= button_to "Go on this ride", new_ride_path(@attraction), method: "POST" %>
  <%= link_to("Edit Attraction", edit_attraction_path(@attraction)) if is_admin? %>
</ul>
