<h1>Listing Attractions</h1>

<table>
  <thead>
    <th>Picture</th>
    <th>Name</th>
    <th>Tickets</th>
    <th>Details</th>
  </thead>
  <tbody>
    <% @attractions.each do |a| %>
    <tr>
      <td></td>
      <td><%= a.name %></td>
      <td><%= a.tickets %></td>
      <% if is_admin? %>
        <td><%= link_to "Show #{a.name}", show_ride_path(a) %></td>
      <% else %>
        <td><%= link_to "Go on #{a.name}", show_ride_path(a) %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<% if is_admin? %>
  <%= link_to "New Attraction", new_attraction_path %>
<% end %>
